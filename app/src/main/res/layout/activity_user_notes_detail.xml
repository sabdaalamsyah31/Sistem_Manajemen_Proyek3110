<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/iphone_13_pro_max___4"
    android:backgroundTint="@color/merah_terbaru"
    tools:context=".User.UserNotesDetail">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView15"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:backgroundTint="@color/transparant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/metrophobic"
            android:text="Notes Proyek"
            android:textAlignment="center"
            android:textColor="@color/abu2"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/notesDetailnmProyek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/metrophobic"
            android:minHeight="48dp"
            android:text="nama Proyek"
            android:textAlignment="center"
            android:textColor="@color/abu2"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="649dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView15">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@drawable/iphone_13_pro_max___4"
            android:backgroundTint="@color/merah_terbaru">

            <TextView
                android:id="@+id/notesDates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/metrophobic"
                android:text="19 November 2023"
                android:textColor="@color/abu2"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_NotesDetail"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            tools:listitem="@layout/item_note_02" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>